{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@kcc/ui-shared": ["libs/ui-shared/src/index.ts"],
      "@kcc/ui-shared/src/lib/ui-buttons": [
        "libs/ui-shared/src/lib/ui-buttons/src/index.ts"
      ],
      "@kcc/ui-shared/src/lib/ui-select": [
        "libs/ui-shared/src/lib/ui-select/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
